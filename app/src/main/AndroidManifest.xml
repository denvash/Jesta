<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.jesta">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />


    <application
        android:name=".JestaApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_jesta_launcher"
        android:label="@string/jesta_app_name"
        android:roundIcon="@mipmap/ic_jesta_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Jesta"
        tools:replace="android:label">

        <activity android:name=".gui.activities.MainActivity">
            <!--<intent-filter>-->
                <!--<action android:name="android.intent.action.MAIN"/>-->
                <!--<category android:name="android.intent.category.LAUNCHER"/>-->
            <!--</intent-filter>-->
        </activity>

        <activity
            android:name=".gui.activities.login.LoginMainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".gui.activities.login.LoginActivity" />


        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/jesta_login_facebook_app_id" />

        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/jesta_app_name" />
        <activity
            android:name="com.facebook.CustomTabActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="@string/jesta_login_fb_login_protocol_scheme" />
            </intent-filter>
        </activity>
        <activity android:name=".gui.activities.StatusReviewActivity" />
        <activity android:name=".gui.activities.login.RegisterActivity" />
        <activity android:name=".gui.activities.login.ErrorActivity" />
        <activity android:name=".gui.activities.login.LoginActivitiesWrapper" />
        <activity android:name=".gui.activities.login.OTPActivity" />

        <service android:name=".utils.services.MessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <activity android:name=".gui.activities.ChatActivity"></activity>
    </application>

</manifest>