<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Jesta" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Widget.Jesta.BottomNavigationView" parent="Theme.Jesta">
        <item name="android:color">@color/colorPrimary</item>
    </style>

    <!--TextAppearance-->
    <style name="TextAppearance.Jesta" parent="">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/montserrat_light</item>
    </style>
    <style name="TextAppearance.Jesta.Type" parent="">
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/marvel</item>
    </style>

    <style name="Widget.Jesta.EditText" parent="TextAppearance.Jesta.Type">
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="android:background">@drawable/jesta_rounded_corner_tag</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingStart">@dimen/_10dp</item>
        <item name="android:paddingEnd">@dimen/_10dp</item>

        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextAppearance.Jesta.Type.Purple" parent="TextAppearance.Jesta.Type">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <!--Widgets-->

    <style name="Widget.Jesta.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/white</item>
    </style>

    <style name="Widget.Jesta.Button.Special" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:background">@color/white</item>
        <item name="textAllCaps">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/marvel</item>
    </style>

    <style name="Widget.Jesta.Tag" parent="">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/montserrat_light_italic</item>
    </style>

    <style name="Widget.Jesta.Chip" parent="Widget.Jesta.Tag">
        <item name="android:fontFamily">@font/marvel</item>
        <item name="android:textAllCaps">true</item>
    </style>


    <!-- Login theme and widgets-->

    <style name="Theme.Jesta.Login" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/semiTransparentWhite</item>
        <item name="colorOnPrimary">@color/darkGray</item>
        <item name="colorPrimaryDark">@color/blue</item>
        <item name="colorAccent">@color/blue</item>
        <item name="android:statusBarColor">@color/blue</item>
    </style>


    <style name="HintText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Theme.Jesta.Login.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:fontFamily">@font/marvel</item>
        <item name="boxStrokeColor">@color/pink</item>
        <item name="hintTextAppearance">@style/HintText</item>
    </style>

    <style name="Theme.Jesta.Login.TextInputEditText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="Theme.Jesta.Login.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">14dp</item>
        <item name="android:padding">14dp</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

</resources>
