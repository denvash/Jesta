<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Jesta" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Widget.Jesta.BottomNavigationView" parent="Theme.Jesta">
        <item name="android:color">@color/colorPrimary</item>
    </style>

    <!--TextAppearance-->
    <style name="TextAppearance.Jesta" parent="">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/montserrat_light</item>
    </style>
    <style name="TextAppearance.Jesta.Type" parent="">
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/marvel</item>
    </style>

    <style name="Widget.Jesta.EditText" parent="TextAppearance.Jesta.Type">
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="android:background">@drawable/rounded_corner_tag</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingStart">@dimen/_10dp</item>
        <item name="android:paddingEnd">@dimen/_10dp</item>

        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextAppearance.Jesta.Type.Purple" parent="TextAppearance.Jesta.Type">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <!--Widgets-->

    <style name="Widget.Jesta.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextAppearance.Jesta.TextInputLayout.HintText</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="TextAppearance.Jesta.TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Widget.Jesta.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/white</item>
    </style>

    <style name="TextAppearance.Jesta.Toolbar" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Widget.Jesta.Backdrop" parent="">
        <item name="android:background">?attr/colorAccent</item>
    </style>

    <style name="Widget.Jesta.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="backgroundTint">@color/colorPrimaryLight</item>
        <item name="android:stateListAnimator" tools:ignore="NewApi">
            @animator/jesta_next_button_state_list_anim
        </item>
        <item name="android:fontFamily">@font/montserrat_light</item>
    </style>

    <style name="Widget.Jesta.Button.Special" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:background">@color/white</item>
        <item name="textAllCaps">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/marvel</item>
    </style>

    <style name="Widget.Jesta.Tag" parent="">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/montserrat_light_italic</item>
    </style>

    <style name="Widget.Jesta.Chip" parent="Widget.Jesta.Tag">
        <item name="android:fontFamily">@font/marvel</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Widget.Jesta.Tag.Difficulty" parent="Widget.Jesta.Tag">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:fontFamily">@font/montserrat_light</item>
        <item name="android:radius">8dp</item>
    </style>

    <style name="Widget.Jesta.Tag.Reward" parent="Widget.Jesta.Tag">
        <item name="android:paddingStart">@dimen/_10dp</item>
        <item name="android:paddingEnd">@dimen/_10dp</item>
        <item name="android:textColor">@color/tag_reward_text_color</item>
    </style>

    <style name="Widget.Jesta.Tag.Data" parent="Widget.Jesta.Tag.Reward">
        <item name="android:fontFamily">@font/montserrat_light</item>
        <item name="android:textColor">@color/tag_text_color</item>
    </style>

    <style name="Widget.Jesta.Tag.Reward.Inner" parent="Widget.Jesta.Tag.Reward">
        <item name="android:fontFamily">@font/montserrat_light</item>
        <item name="android:textColor">@color/tag_reward_text_color_dark</item>
        <item name="android:background">@drawable/rounded_corner_dark</item>
    </style>

    <style name="Widget.Jesta.Button.Fab" parent="Widget.Jesta.Button">
        <item name="backgroundTint">@color/white</item>
    </style>


    <!-- Login theme and widgets-->

    <style name="Theme.Jesta.Login" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/semiTransparentWhite</item>
        <item name="colorOnPrimary">@color/darkGray</item>
        <item name="colorPrimaryDark">@color/blue</item>
        <item name="colorAccent">@color/blue</item>
        <item name="android:statusBarColor">@color/blue</item>
    </style>


    <style name="HintText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Theme.Jesta.Login.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:fontFamily">@font/marvel</item>
        <item name="boxStrokeColor">@color/pink</item>
        <item name="hintTextAppearance">@style/HintText</item>
    </style>

    <style name="Theme.Jesta.Login.TextInputEditText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="Theme.Jesta.Login.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">14dp</item>
        <item name="android:padding">14dp</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="FullscreenTheme" parent="Theme.Jesta">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="android:Widget.Holo.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>
</resources>
