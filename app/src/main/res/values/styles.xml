<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Jesta" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextAppearance.Jesta.Title" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Widget.Jesta.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextAppearance.Jesta.TextInputLayout.HintText</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="TextAppearance.Jesta.TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Widget.Jesta.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Widget.Jesta.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorAccent</item>
        <item name="android:theme">@style/Theme.Jesta</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="titleTextAppearance">@style/TextAppearance.Jesta.Toolbar</item>
    </style>

    <style name="TextAppearance.Jesta.Toolbar" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Widget.Shrine.Backdrop" parent="">
        <item name="android:background">?attr/colorAccent</item>
    </style>

    <style name="Widget.Jesta.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="backgroundTint">?attr/colorPrimaryDark</item>
        <item name="android:stateListAnimator" tools:ignore="NewApi">
            @animator/jesta_next_button_state_list_anim
        </item>
    </style>



    <style name="Theme.Jesta.Login" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Widget.Jesta.Login.RoundedButton" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textColor">@color/darkGray</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="Widget.Jesta.Login.RoundedEditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox.Dense">
        <item name="android:padding">18dp</item>
        <item name="android:fontFamily">@font/marvel</item>
        <item name="android:textColor">@color/darkGray</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="Widget.Jesta.Login.RoundedEditTextDigit" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/rounded_edit_text_digit</item>
        <item name="android:textColor">@color/darkGray</item>
        <item name="android:padding">18dp</item>
        <item name="android:textSize">18dp</item>
    </style>
</resources>
