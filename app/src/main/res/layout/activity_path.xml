<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".pathChoose.PathActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:padding="24dp"
            android:paddingTop="16dp">

        <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="48dp"
                android:layout_marginBottom="16dp"
                android:tint="?android:attr/textColorPrimary"
                app:srcCompat="@drawable/jesta_logo"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="132dp"
                android:text="@string/jesta_app_name"
                android:textAppearance="@style/TextAppearance.Jesta.Title" />

        <com.google.android.material.button.MaterialButton
                android:id="@+id/ask_jesta_button"
                style="@style/Widget.Jesta.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ask a Jesta"/>

        <com.google.android.material.button.MaterialButton
                android:id="@+id/do_jesta_button"
                style="@style/Widget.Jesta.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Do a Jesta"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>