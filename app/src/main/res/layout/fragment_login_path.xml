<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gui.fragments.SettingsFragment">

    <ScrollView
        android:id="@+id/jesta_settings_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_jesta_banner"
                android:layout_marginBottom="40dp"
                tools:ignore="ContentDescription" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/google_sign_in_btn"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                style="@style/Widget.Jesta.Button.Special"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/jesta_login_login"
                app:icon="@drawable/ic_google"
                app:iconSize="20dp"
                app:iconTint="@color/colorPrimary"
                app:iconGravity="textStart"
                app:backgroundTint="@color/white"
                app:cornerRadius="5dp"
                app:rippleColor="@color/colorPrimaryLight"
                app:strokeColor="@color/black"
                app:strokeWidth="1dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/facebook_sign_in_btn"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                style="@style/Widget.Jesta.Button.Special"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/jesta_login_login"
                app:icon="@drawable/ic_facebook"
                app:iconSize="20dp"
                app:iconTint="@color/colorPrimary"
                app:iconGravity="textStart"
                app:backgroundTint="@color/white"
                app:cornerRadius="5dp"
                app:rippleColor="@color/colorPrimaryLight"
                app:strokeColor="@color/black"
                app:strokeWidth="1dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/email_sign_in_btn"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                style="@style/Widget.Jesta.Button.Special"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/jesta_login_login"
                app:icon="@drawable/ic_mail"
                app:iconSize="20dp"
                app:iconTint="@color/colorPrimary"
                app:iconGravity="textStart"
                app:backgroundTint="@color/white"
                app:cornerRadius="5dp"
                app:rippleColor="@color/colorPrimaryLight"
                app:strokeColor="@color/black"
                app:strokeWidth="1dp" />
        </LinearLayout>
    </ScrollView>

</FrameLayout>