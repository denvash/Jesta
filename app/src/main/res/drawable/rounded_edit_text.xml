<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:app="http://schemas.android.com/apk/res-auto">

    <item android:state_enabled="true"
          android:state_focused="true">
        <shape android:shape="rectangle">
            <stroke android:width="2dp" android:color="#ffa0a4" />
            <corners
                    android:bottomRightRadius="@dimen/roundRadius"
                    android:bottomLeftRadius="@dimen/roundRadius"
                    android:topRightRadius="@dimen/roundRadius"
                    android:topLeftRadius="@dimen/roundRadius"
            />
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <corners
                    android:bottomRightRadius="@dimen/roundRadius"
                    android:bottomLeftRadius="@dimen/roundRadius"
                    android:topRightRadius="@dimen/roundRadius"
                    android:topLeftRadius="@dimen/roundRadius"
            />
        </shape>
    </item>
</selector>
